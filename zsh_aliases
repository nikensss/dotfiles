alias vim=nvim
alias v='vim .'
alias py=python3
alias pip=/usr/local/bin/pip3
alias cve='python3 -m venv --system-site-packages ./venv'
alias uve='source venv/bin/activate'
alias b='npm run build'
alias t='npm test'
alias tw='npm run test:watch'
alias s='npm start'
alias please='sudo'
alias repos='cd ~/repos'
alias dotf='repos && cd dotfiles'
alias weirwood='repos && cd weirwood'
alias ww='weirwood'
alias webdev='repos && cd webdev'
alias wd='webdev'
alias js='repos && cd javascript'
alias ts='repos && cd typescript'
alias cde='repos && cd code/projects'
alias vzsh='vim ~/.zshrc'
alias szsh='source ~/.zshrc'
alias vvrc='vim ~/.vimrc'
alias vnvi='vim ~/.config/nvim/init.vim'
alias quokka='code ~/repos/javascript/quokkasandbox'
alias sass-watch='sass --watch --no-source-map scss/style.scss css/style.css'
alias postcss-watch='postcss css/style.css -o css/output.css --no-map -u autoprefixer -w'
alias rmnm='rm -rf node_modules'
alias slogin='/usr/local/bin/zsh --login'
alias brup='echo "updating and upgrading homebrew" && brew update && brew upgrade'
alias unvm='echo "updating nvm" && curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.38.0/install.sh | bash'
alias ugnp='echo "updating global npm packages" && npm update -g'
alias uomz='echo "updating Oh My zsh" && sh ~/.oh-my-zsh/tools/upgrade.sh'
alias uvpl='echo "removing unnecessary vim plugins" && vim +PlugClean! +qa && echo "updating vim plugins" && vim +"PlugUpdate --sync" +qa'
alias uall='brup && unvm && ugnp && uomz && uvpl'
alias vsc='code .'
