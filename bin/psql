#!/usr/bin/env bash

case $1 in
  '--start')
    ~/bin/psql-scripts/start
    exit 0
    ;;
  '--stop')
    ~/bin/psql-scripts/stop
    exit 0
    ;;
  '--file')
    shift
    ~/bin/psql-scripts/run-file-in-container $1 $2
    exit 0
    ;;
esac

DB_NAME=${1:-"postgres"}

docker exec -it my-postgres psql -U postgres $DB_NAME
