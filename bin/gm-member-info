#!/usr/bin/env bash

ENV=$1
PEOPLE_ID=${2:-$(cat -)}

src_file() {
    if [[ ! -f $1 ]]; then
      echo "missing '$1' file"
      exit 1
    fi
    source $1
}

case $ENV in
  'prod' | 'p')
    src_file ~/bin/.env.gm.prod
    ;;
  *)
    echo "unknown env '$1'; use [p]rod or [s]tage"
    exit 1
    ;;
esac

src_file ~/bin/.env.gm.urls

TOKEN=$(curl -s -X 'POST' $GM_AUTH \
  -H 'accept: application/json' \
  -H 'Content-Type: application/json' \
  -d "{ \"username\": \"$GM_V6_AUTH_USER\", \"password\": \"$GM_V6_AUTH_PASSWORD\", \"apiLicense\": \"$GM_LICENSE\" }" \
  | jq '.data' | xargs)

if [[ "$TOKEN" == null ]]; then
  echo "could not log in!"
  exit 1
fi

MEMBER_INFO=$(curl -s -X 'GET' $GM_MEMBER_INFO \
  -H 'accept: application/json' \
  -H "Authorization: $TOKEN" )

echo "member info received:"
echo $MEMBER_INFO | jq
